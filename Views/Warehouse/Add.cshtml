@model web_test_app.Models.Product


@{
    ViewData["Title"] = "Add";
}

<h1>Add</h1>

<h1>Form adding a product to the warehouse</h1>

@using (Html.BeginForm("Add", "Warehouse", FormMethod.Post))
{
    <span>Product's name: </span>@Html.TextBoxFor(x => x.Name)
    <span>Description: </span>@Html.TextBoxFor(x => x.Description)
    <span>Category: </span>@Html.TextBoxFor(x => x.Category)

    <button type="submit">Submit the form</button>
}